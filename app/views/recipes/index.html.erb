<h1>All Recipes</h1>

<div class="recipes">
  <% @recipes.each do |recipe| %>
  <div class="box panel panel-default">
    <%= link_to (image_tag recipe.image), recipe  %>
    <div class="panel panel-body">
      <%= link_to recipe.name, recipe %>
      <p><%= recipe.beer_style %></p>
    </div>
  </div>
  <% end %>
</div>